@using ITAssetKeeper.Models.Enums
@model ITAssetKeeper.Models.ViewModels.Account.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "_AuthLayout";
}

<!-- ロゴ表示 -->
<div class="logo-box">
    <div class="logo-container">
        <img src="~/img/logo.png" class="logo-image" alt="logo" />
        <span class="logo-title-text">IT Asset Keeper</span>
    </div>
</div>

<!-- タイトル表示 -->
<h2 class="auth-title text-center mt-4">
    <img src="~/img/pwchange_icon.png" class="title-icon" alt="" />
    パスワード変更
</h2>

<form asp-action="ChangePassword" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <!-- アラートメッセージがあればここに表示 -->
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert-wrapper">
            <div class="alert alert-warning mt-3 d-flex align-items-start">
                <img src="~/img/warning.png" class="alert-icon" alt="warning" />
                <div>
                    @Html.ValidationSummary(true, "", new { @class = "mb-0" })
                </div>
            </div>
        </div>
    }

    <!-- ログイン時パスワード有効期限切れの場合、ここにメッセージ表示 -->
    @if (TempData[@ChangePWTemp.PasswordExpiredMessage.ToString()] != null)
    {
        <div class="alert-wrapper">
            <div class="alert alert-warning mt-3 d-flex align-items-start">
                <img src="~/img/warning.png" class="alert-icon" alt="warning" />
                @TempData[@ChangePWTemp.PasswordExpiredMessage.ToString()]
            </div>
        </div>
    }

    <!-- パスワード変更フォーム -->
    <div class="auth-form-wrapper">
        <div class="mb-3 input-group auth-password-wrapper">
            <input asp-for="CurrentPassword" type="password" class="form-control auth-input"
               placeholder="現在のパスワード" />

            <span class="input-group-text password-toggle">
                <img src="~/img/eye_off.png" class="eye-icon" alt="toggle" />
            </span>
        </div>

        <div class="mb-3 input-group auth-password-wrapper">
            <input asp-for="NewPassword" type="password" class="form-control auth-input"
                   placeholder="新しいパスワード" />

            <span class="input-group-text password-toggle">
                <img src="~/img/eye_off.png" class="eye-icon" alt="toggle" />
            </span>
        </div>

        <div class="mb-3 input-group auth-password-wrapper">
            <input asp-for="ConfirmPassword" type="password" class="form-control auth-input"
                   placeholder="パスワードを再入力" />

            <span class="input-group-text password-toggle">
                <img src="~/img/eye_off.png" class="eye-icon" alt="toggle" />
            </span>
        </div>

        <button type="submit" class="btn auth-btn w-100 mt-4">変更</button>
    </div>
</form>


