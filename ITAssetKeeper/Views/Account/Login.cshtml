@using ITAssetKeeper.Models.ViewModels.Account
@using ITAssetKeeper.Models.Enum
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>ログイン</h1>

<div>
    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <!-- アラートメッセージがあればここに表示 -->
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-warning mt-3" role="alert">
                @Html.ValidationSummary(true, "", new { @class = "mb-0" })
            </div>
        }

        <!-- パスワード変更からリダイレクトされた場合、ここにメッセージ表示 -->
        @if (TempData[@ChangePWTemp.PasswordChangeMessage.ToString()] != null)
        {
            <div class="alert alert-warning">@TempData[@ChangePWTemp.PasswordChangeMessage.ToString()]</div>
        }

        <div class="form-group">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" placeholder="ログインID"/>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" placeholder="パスワード"/>
        </div>

        <div class="form-check">
            <input asp-for="RememberMe" type="checkbox">
            <label asp-for="RememberMe" class="control-label"></label>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="ログイン" class="btn btn-primary" />
        </div>
    </form>
</div>
