@model ITAssetKeeper.Models.ViewModels.Dashboard.DashboardAdminViewModel

@{
    ViewData["Title"] = "Dashboard - Admin";
}

<div class="container mt-4">
    <!-- 1行目：1列（テーブル入りカード） -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">最近追加された機器一覧(5件)</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.DisplayDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.ManagementId)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.Category)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.ModelNumber)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.HostName)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.Location)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.UserName)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.Status)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentlyAddedDevices?.Any() != true)
                                {
                                    <tr><td colspan="8" class="text-muted">データがありません</td></tr>
                                }
                                @foreach (var item in Model.RecentlyAddedDevices)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.DisplayDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ManagementId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ModelNumber)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HostName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 2行目：2列（枠だけのカード） -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">過去7日間の更新履歴件数</h5>
                    <!-- 描画した棒グラフを表示 -->
                    <canvas id="historyCountChart" width="400", height="400"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">状態別の台数集計</h5>
                    <!-- 描画したドーナツ型グラフを表示 -->
                    <canvas id="statusChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- グラフの描画 -->
@section Scripts {
    <script>
        // 棒グラフの描画
        const updateCtx = document.getElementById('historyCountChart').getContext('2d');
        const updateHistoryChart = new Chart(updateCtx, {
            type: 'bar',
            data: {
                labels: ['11/4', '11/5', '11/6', '11/7', '11/8', '11/9', '11/10'],
                datasets: [{
                    label: '更新件数',
                    data: [3, 5, 2, 4, 6, 1, 4], // ← ここはサーバーから渡す値に置き換え
                    backgroundColor: 'rgba(170, 140, 255, 0.7)',
                    borderColor: 'rgba(170, 140, 255, 0.5)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: false,
                            text: '件数'
                        }
                    },
                    x: {
                        title: {
                            display: false,
                            text: '日付'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: false,
                        text: '過去7日間の更新履歴件数'
                    }
                }
            }
        });

        // ドーナツ型グラフの描画
        const ctx = document.getElementById('statusChart').getContext('2d');
        const statusChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['稼働中', '予備', '故障','廃棄予定','廃棄済'],
                datasets: [{
                    label: '状態別台数',
                    data: [45, 25, 15, 10, 5], // ← ここはサーバーから渡す値に置き換え
                    backgroundColor: [
                        'rgba(170, 140, 255, 0.7)',  // 稼働中
                        'rgba(140, 167, 255, 0.7)',  // 予備
                        'rgba(140, 199, 255, 0.7)',  // 故障
                        'rgba(140, 224, 255, 0.7)',  // 廃棄予定
                        'rgba(207, 235, 234, 0.7)'   // 廃棄済
                    ],
                    borderColor: [
                        'rgba(170, 140, 255, 0.5)',
                        'rgba(140, 167, 255, 0.5)',
                        'rgba(140, 199, 255, 0.5)',
                        'rgba(140, 224, 255, 0.5)',
                        'rgba(207, 235, 234, 0.5)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top'
                    },
                    title: {
                        display: false,
                        text: '状態別の台数集計'
                    }
                }
            }
        });
    </script>
}
