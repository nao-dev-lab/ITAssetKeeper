@model ITAssetKeeper.Models.ViewModels.Dashboard.DashboardAdminViewModel

@{
    ViewData["Title"] = "Dashboard - Admin";
}

<div class="container mt-4">
    <!-- 1行目：1列（テーブル入りカード） -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">最近追加された機器一覧(5件)</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.DisplayDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.ManagementId)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.Category)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.ModelNumber)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.HostName)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.Location)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.UserName)</th>
                                    <th>@Html.DisplayNameFor(model => model.RecentlyHeader.Status)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentlyAddedDevices?.Any() != true)
                                {
                                    <tr><td colspan="8" class="text-muted">データがありません</td></tr>
                                }
                                @foreach (var item in Model.RecentlyAddedDevices)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.DisplayDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ManagementId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ModelNumber)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HostName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 2行目：2列（グラフ入りカード） -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">過去7日間の更新履歴件数</h5>
                    <!-- 描画した棒グラフを表示 -->
                    <!-- Listの中身が空じゃなければグラフを描画する -->
                    @if (Model.HistoryLast7Days?.Any() == true)
                    {
                        <canvas id="historyCountChart" width="400" height="400"></canvas>
                    }
                    else
                    {
                        <p class="text-muted">データがありません</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">状態別の台数集計</h5>
                    <!-- 描画したドーナツ型グラフを表示 -->
                    <!-- Listの中身が空ではない&いずれかに1以上あればグラフを描画する -->
                    @{
                        var total = Model.StatusCount.WorkingCount
                                  + Model.StatusCount.ReserveCount
                                  + Model.StatusCount.WorkingCount
                                  + Model.StatusCount.ScheduledForDisposalCount
                                  + Model.StatusCount.DisposedCount;
                    }

                    @if (Model.StatusCount != null && total > 0)
                    {
                        <canvas id="statusChart" width="400" height="400"></canvas>
                    }
                    else
                    {
                        <p class="text-muted">データがありません</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- グラフの描画 -->
@section Scripts {
    <script>
        // 棒グラフの描画
        // Listの値を取得して、labelとdataを定数に入れる
        const updateData = @Html.Raw(Json.Serialize(Model.HistoryLast7Days))
        const labels = updateData.map(item => item.displayDate);
        const data = updateData.map(item => item.count);

        const updateCtx = document.getElementById('historyCountChart').getContext('2d');
        const updateHistoryChart = new Chart(updateCtx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: '更新件数',
                    data: data,
                    backgroundColor: 'rgba(170, 140, 255, 0.7)',
                    borderColor: 'rgba(170, 140, 255, 0.5)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize:1,     // 目盛りの間隔を1に固定
                            precision: 0    // 小数点以下を表示しない
                        },
                        title: {
                            display: false,
                            text: '件数'
                        }
                    },
                    x: {
                        title: {
                            display: false,
                            text: '日付'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: false,
                        text: '過去7日間の更新履歴件数'
                    }
                }
            }
        });

        // ドーナツ型グラフの描画
        // label の値を取得して定数に入れる
        const statusLabels = [
            @Html.Raw("'" + @Html.DisplayNameFor(model => model.StatusHeader.WorkingCount) + "'"),
            @Html.Raw("'" + @Html.DisplayNameFor(model => model.StatusHeader.ReserveCount) + "'"),
            @Html.Raw("'" + @Html.DisplayNameFor(model => model.StatusHeader.BrokenCount) + "'"),
            @Html.Raw("'" + @Html.DisplayNameFor(model => model.StatusHeader.ScheduledForDisposalCount) + "'"),
            @Html.Raw("'" + @Html.DisplayNameFor(model => model.StatusHeader.DisposedCount) + "'")
        ]

        // data の値を取得して定数に入れる
        const statusData = [
            @Model.StatusCount.WorkingCount,
            @Model.StatusCount.ReserveCount,
            @Model.StatusCount.BrokenCount,
            @Model.StatusCount.ScheduledForDisposalCount,
            @Model.StatusCount.DisposedCount,
        ]
        const ctx = document.getElementById('statusChart').getContext('2d');
        const statusChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: statusLabels,
                datasets: [{
                    label: '状態別台数',
                    data: statusData,
                    backgroundColor: [
                        'rgba(170, 140, 255, 0.7)',  // 稼働中
                        'rgba(140, 167, 255, 0.7)',  // 予備
                        'rgba(140, 199, 255, 0.7)',  // 故障
                        'rgba(140, 224, 255, 0.7)',  // 廃棄予定
                        'rgba(207, 235, 234, 0.7)'   // 廃棄済
                    ],
                    borderColor: [
                        'rgba(170, 140, 255, 0.5)',
                        'rgba(140, 167, 255, 0.5)',
                        'rgba(140, 199, 255, 0.5)',
                        'rgba(140, 224, 255, 0.5)',
                        'rgba(207, 235, 234, 0.5)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            padding: 20
                        }
                    },
                    title: {
                        display: false,
                        text: '状態別の台数集計'
                    }
                }
            }
        });
    </script>
}
