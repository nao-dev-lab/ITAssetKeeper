@model ITAssetKeeper.Models.ViewModels.DeviceHistory.DeviceHistoryListViewModel

@* テーブル表示 *@
<div class="table-wrapper">
    <table class="table table-hover table-bordered nowrap-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.HistoryId)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.ManagementId)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.ChangeType)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.UpdatedBy)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.UpdatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.CategoryAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.PurposeAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.ModelNumberAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.SerialNumberAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.HostNameAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.LocationAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.UserNameAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.StatusAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.MemoAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.PurchaseDateAtHistory)</th>
                <th>@Html.DisplayNameFor(model => model.DeviceHistoryListItemDtoHeader.CreatedAtHistory)</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Histories)
            {
                <tr>
                    <td>
                        <a asp-controller="DeviceHistory" asp-action="Details" asp-route-id="@item.Id" 
                        class="history-detail-link" data-id="@item.Id">
                        @item.HistoryId</a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ManagementId)
                    </td>

                    <td class="badge-td">
                        <span class="change-badge @item.ChangeTypeClass">
                            @Html.DisplayFor(modelItem => item.ChangeType)
                        </span>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedAtText)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryAtHistory)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PurposeAtHistory)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ModelNumberAtHistory)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SerialNumberAtHistory)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HostNameAtHistory)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.LocationAtHistory)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UserNameAtHistory)
                    </td>

                    <td class="badge-td">
                        <span class="status-badge @item.StatusClass">
                            @Html.DisplayFor(modelItem => item.StatusAtHistory)
                        </span>
                    </td>

                    <td class="text-ellipsis">
                        @Html.DisplayFor(modelItem => item.MemoAtHistory)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseDateAtHistoryText)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAtHistoryText)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@*ページング表示 *@
<nav aria-label="Page navigation" class="mt-3" data-ajax-url="@Url.Action("GetPagedList", "DeviceHistory")">
    <ul class="pagination">

        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link paging-link" data-page="@(Model.PageNumber - 1)">‹ 前へ</a>
            </li>
        }

        @foreach (var num in Model.PageRange)
        {
            <li class="page-item @(num == Model.PageNumber ? "active" : "")">
                <a class="page-link paging-link" data-page="@num">@num</a>
            </li>
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link paging-link" data-page="@(Model.PageNumber + 1)">次へ ›</a>
            </li>
        }

    </ul>
</nav>