<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITAssetKeeper</title>

    @* CSS *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />

</head>
<body class="auth-body">

    <div class="auth-container">
        <div class="auth-card">
            @RenderBody()

            <footer class="auth-footer text-center mt-4">
                © 2025 - IT Asset Keeper
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/account/password-toggle.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @* Views 側が描画されてから toast.js が実行されるように RenderSectionAsyncの後に置く *@
    <script src="~/js/toast.js"></script>

    @* トーストUI *@
    <div class="toast-container position-fixed top-0 end-0 p-4">
        <div id="resultToast" class="toast align-items-center text-white border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="6000">
            <div class="d-flex">
                <div class="toast-body" id="toastMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

</body>
</html>