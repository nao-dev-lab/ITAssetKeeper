@using Microsoft.AspNetCore.Identity
@using ITAssetKeeper.Models.Entities
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITAssetKeeper</title>

    @* favicon *@
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/modal.css" />
    <link rel="stylesheet" href="~/css/toast.css" />
    <link rel="stylesheet" href="~/ITAssetKeeper.styles.css" asp-append-version="true" />
</head>

<body>

    @* レイアウト全体*@
    <div class="layout-wrapper d-flex">

        @* サイドバー *@
        @await Html.PartialAsync("_SidebarPartial")

        @* メインコンテンツ *@
        <div class="main-content flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    @* アカウント情報表示用モーダル *@
    <div id="profileModalContainer">
        @* ここに部分ビュー(_ProfilePartial)が差し込まれる *@
    </div>

    @* パスワード変更画面への遷移確認用 *@
    @await Html.PartialAsync("_ChangePasswordConfirmPartial")

    @* ログアウト確認用モーダル *@
    @await Html.PartialAsync("_LogoutConfirmPartial")

    @* トースト UI *@
    <div class="toast-container position-fixed top-0 end-0 p-4">
        <div id="resultToast" class="toast align-items-center text-white border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="6000">
            <div class="d-flex">
                <div class="toast-body" id="toastMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    @* JSの読み込み *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toast.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/js/layout.js"></script>
</body>
</html>
