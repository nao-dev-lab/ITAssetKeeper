@using Microsoft.AspNetCore.Identity
@using ITAssetKeeper.Models.Entities
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITAssetKeeper</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/device-delete.css" />
    <link rel="stylesheet" href="~/ITAssetKeeper.styles.css" asp-append-version="true" />
</head>

<body>

    @* レイアウト全体*@
    <div class="layout-wrapper d-flex">

        @* サイドバー *@
        @await Html.PartialAsync("_SidebarPartial")

        @* メインコンテンツ *@
        <div class="main-content flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    @* トースト UI *@
    <div class="toast-container position-fixed top-0 end-0 p-4">
        <div id="resultToast" class="toast align-items-center text-white border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="6000">
            <div class="d-flex">
                <div class="toast-body" id="toastMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toast.js"></script>

    @* Chart.js *@
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
