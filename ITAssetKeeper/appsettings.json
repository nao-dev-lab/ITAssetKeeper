{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },

  "WriteTo": [
    {
      "Name": "File",
      "Args": {
        "path": "Logs/app-.log",
        "rollingInterval": "Day",
        "shared": true,
        "encoding": "utf-8"
      }
    }
  ],

  "Enrich": [ "FromLogContext" ]
}

